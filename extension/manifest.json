{
  "manifest_version": 3,
  "name": "google ai extension",
  "version": "1.0",
  "description": "A lightweight Gemini chatbot extension.",
  "action": {
    "default_popup": "public/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [],
  "host_permissions": [
    "http://localhost:4500/"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
